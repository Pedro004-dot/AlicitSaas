# ================================
# CONFIGURAÇÕES DE PRODUÇÃO - HEROKU
# ================================

# Configure estas variáveis no Heroku Dashboard -> Settings -> Config Vars

# Configurações do Flask
SECRET_KEY=sua-chave-secreta-super-segura-aqui
FLASK_ENV=production
FLASK_DEBUG=False

# Configurações do Supabase (copie do seu config.env)
SUPABASE_URL=https://hdlowzlkwrboqfzjewom.supabase.co
SUPABASE_SERVICE_KEY=sua-service-key-aqui
SUPABASE_ANON_KEY=sua-anon-key-aqui
DATABASE_URL=sua-database-url-aqui

# Configurações de API externa
OPENAI_API_KEY=sua-openai-key-aqui

# Redis para produção (se usar Redis addon no Heroku)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# CORS - atualize com a URL real do frontend na Vercel
CORS_ORIGINS=https://seu-frontend.vercel.app,https://www.seu-frontend.vercel.app

# Configurações de logging
LOG_LEVEL=INFO

# Configurações do matching
SIMILARITY_THRESHOLD_PHASE1=0.65
SIMILARITY_THRESHOLD_PHASE2=0.70
VECTORIZER_TYPE=sentence_transformers
CLEAR_MATCHES_BEFORE_REEVALUATE=true

# Configurações de performance
PNCP_MAX_PAGES=5
PNCP_PAGE_SIZE=50

# RAG configurations
RAG_CHUNK_SIZE=800
RAG_CHUNK_OVERLAP=100
RAG_EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
RAG_CACHE_TTL=3600

# Ambiente
ENV=production 